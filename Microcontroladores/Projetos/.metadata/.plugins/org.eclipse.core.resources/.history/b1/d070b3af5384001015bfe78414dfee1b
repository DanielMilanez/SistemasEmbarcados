#ifndef INC_MCU6050_H_
#define INC_MCU6050_H_

#include "main.h"
#define MCU6050_ADDR (0x68 << 1)

// Registers
#define REG_CONFIG			0x1A

#define REG_CONFIG_GYRO 	0x1B
#define REG_CONFIG_ACC  	0x1C

#define REG_PWR_CTRL		0x6B

#define REG_ACC_DATA_X		0x3D
#define REG_ACC_DATA_Y		0x3F
#define REG_ACC_DATA_Z		0x3B

typedef enum{
	DEVICE_NOT_EXIST = 0x01,
	CANT_ACESS_ACC_REG = 0x02,
	CANT_ACESS_GYRO_REG = 0x03,
	CANT_ACESS_PWR_REG = 0x04
}error;

typedef struct{
	error status;
}MCU6050_STATUS;

MCU6050_STATUS MCU6050_StartUp(void);

#endif /* INC_MCU6050_H_ */
