/* Private variables ---------------------------------------------------------*/
SPI_HandleTypeDef hspi1;

/* USER CODE BEGIN PV */
const uint8_t TM1638_Digits[10] = {
    0x3F, // 0
    0x06, // 1
    0x5B, // 2
    0x4F, // 3
    0x66, // 4
    0x6D, // 5
    0x7D, // 6
    0x07, // 7
    0x7F, // 8
    0x6F  // 9
};
/* USER CODE END PV */

/* Private function prototypes -----------------------------------------------*/
void SystemClock_Config(void);
static void MX_GPIO_Init(void);
static void MX_SPI1_Init(void);
/* USER CODE BEGIN PFP */

void TM1638_Clear(void) {
    for (uint8_t i = 0; i < 16; i++) {
        TM1638_WriteData(i, 0x00);
    }
}

void TM1638_SendCommand(uint8_t cmd) {
    HAL_GPIO_WritePin(STB_GPIO_Port, STB_Pin, GPIO_PIN_RESET);
    HAL_SPI_Transmit(&hspi1, &cmd, 1, HAL_MAX_DELAY);
    HAL_GPIO_WritePin(STB_GPIO_Port, STB_Pin, GPIO_PIN_SET);
}

void TM1638_Init(void) {
	HAL_GPIO_WritePin(STB_GPIO_Port, STB_Pin, GPIO_PIN_SET);
    TM1638_SendCommand(0x40);  // modo auto-increment
    TM1638_Clear();            // limpa display e LEDs
    TM1638_SendCommand(0x8F);  // display ligado, brilho mÃ¡ximo
}

void TM1638_WriteData(uint8_t addr, uint8_t data) {
	uint8_t addr_increment;
	addr_increment = addr | 0xC0;

    HAL_GPIO_WritePin(STB_GPIO_Port, STB_Pin, GPIO_PIN_RESET);
    HAL_SPI_Transmit(&hspi1, &addr_increment, 1, HAL_MAX_DELAY);
    HAL_SPI_Transmit(&hspi1, &data, 1, HAL_MAX_DELAY);
    HAL_GPIO_WritePin(STB_GPIO_Port, STB_Pin, GPIO_PIN_SET);
}


void TM1638_SetLED(uint8_t pos, uint8_t state) {
    TM1638_WriteData((pos << 1) + 1, state ? 1 : 0);
}

void TM1638_SetDigit(uint8_t pos, uint8_t digit) {
    if (digit < 10) {
        TM1638_WriteData(pos << 1, TM1638_Digits[digit]);
    }
}

